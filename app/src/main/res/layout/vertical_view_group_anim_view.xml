<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vertical_view_group_double_height"
    android:id="@+id/anim_linear_layout"
    android:background="@color/no_color">

    <LinearLayout
        android:layout_width="@dimen/vertical_view_group_width"
        android:layout_height="@dimen/vertical_view_group_height"
        android:background="@color/no_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="活动"
            android:textSize="24sp"
            android:textColor="@color/base_normal"
            android:background="@drawable/stoke_round_corner_base_normal"
            android:gravity="center" />

        <TextView
            android:id="@+id/anim_first_content_TV"
            android:textColor="@color/base_normal"
            android:textSize="25sp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/vertical_view_group_width"
        android:layout_height="@dimen/vertical_view_group_height"
        android:background="@color/no_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="活动"
            android:textSize="24sp"
            android:textColor="@color/base_normal"
            android:background="@drawable/stoke_round_corner_base_normal"
            android:gravity="center" />

        <TextView
            android:id="@+id/anim_second_content_TV"
            android:textColor="@color/base_normal"
            android:textSize="25sp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>